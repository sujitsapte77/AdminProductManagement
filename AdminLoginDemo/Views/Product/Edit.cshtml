@model AdminLoginDemo.Models.Product

<!DOCTYPE html>
<html>
<head>
    <title>Edit Product</title>
</head>
<body>
    <h2>Edit Product</h2>

    @if (TempData["ErrorMessage"] != null)
    {
        <div style="color: red;">@TempData["ErrorMessage"]</div>
    }

    <form action="/Product/Edit" method="post" enctype="multipart/form-data">
        @Html.HiddenFor(model => model.Id)

        <div>
            <label for="Name">Name:</label>
            <input type="text" id="Name" name="Name" value="@Model.Name" required />
        </div>
        <div>
            <label for="Amount">Amount:</label>
            <input type="number" id="Amount" name="Amount" value="@Model.Amount" required />
        </div>
        <div>
            <label for="Description">Description:</label>
            <textarea id="Description" name="Description" rows="4" required>@Model.Description</textarea>
        </div>
        <div>
            <label for="Image">Upload New Image:</label>
            <input type="file" id="Image" name="imageFile" />
        </div>

        @if (!string.IsNullOrEmpty(Model.ImagePath))
        {
            <div>
                <label>Current Image:</label>
                <img src="@Url.Content(Model.ImagePath)" alt="Image" width="100" height="100" />
            </div>
        }

        <button type="submit">Update Product</button>
    </form>

    <p><a href="/Product/List">Back to List</a></p>
</body>
</html>
