@{
    Layout = "~/Views/Shared/_Layout.cshtml"; // Adjust if a layout is used
    ViewBag.Title = "Product List";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product List</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link href="~/Content/Site.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-center mb-4">Product List</h2>

        <!-- Search Input -->
        <div class="input-group mb-3">
            <input type="text"
                   id="searchInput"
                   class="form-control"
                   placeholder="Search by product name..."
                   aria-label="Search" />
            <div class="input-group-append">
                <button id="searchButton" class="btn btn-primary">Search</button>
            </div>
        </div>

        <!-- Product Table -->
        <div class="table-responsive">
            <table class="table table-bordered table-hover text-center" id="productTable">
                <thead class="thead-dark">
                    <tr>
                        <th>Name-sujit</th>
                        <th>Amount</th>
                        <th>Description</th>
                        <th>Image</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Dynamic content will be injected here -->
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        <nav aria-label="Page navigation">
            <ul id="pagination" class="pagination justify-content-center"></ul>
        </nav>
    </div>

    <!-- Loading Spinner -->
    <div id="loadingSpinner" class="d-none text-center mt-5">
        <div class="spinner-border text-primary" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </div>

    <!-- Add AJAX Script -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            // Load products function
            function loadProducts(page = 1, search = "") {
                $("#loadingSpinner").removeClass("d-none"); // Show loading spinner

                $.ajax({
                    url: '/api/products', // Adjust to your API endpoint
                    data: { search: search, page: page, pageSize: 10 },
                    method: 'GET',
                    success: function (response) {
                        $("#loadingSpinner").addClass("d-none"); // Hide loading spinner

                        const products = response.Products;
                        const totalRecords = response.TotalRecords;

                        // Populate table
                        let rows = '';
                        products.forEach(product => {
                            rows += `
                                    <tr>
                                        <td>${product.Name}</td>
                                        <td>${product.Amount.toFixed(2)}</td>
                                        <td>${product.Description}</td>
                                        <td>
                                            <img
                                                src="${product.ImagePath}"
                                                alt="Image of ${product.Name}"
                                                class="img-thumbnail"
                                                style="max-width: 50px;" />
                                        </td>
                                        <td>
                                            <a href="/Product/Edit/${product.ProductId}" class="btn btn-warning btn-sm">Edit</a>
                                        </td>
                                    </tr>`;
                        });
                        $('#productTable tbody').html(rows);

                        // Generate pagination
                        const totalPages = Math.ceil(totalRecords / 10);
                        let pagination = '';
                        for (let i = 1; i <= totalPages; i++) {
                            pagination += `
                                    <li class="page-item ${i === page ? 'active' : ''}">
                                        <a
                                            class="page-link"
                                            href="javascript:void(0);"
                                            aria-label="Page ${i}"
                                            onclick="loadProducts(${i}, '${search}')">
                                            ${i}
                                        </a>
                                    </li>`;
                        }
                        $('#pagination').html(pagination);
                    },
                    error: function () {
                        $("#loadingSpinner").addClass("d-none"); // Hide loading spinner
                        alert("Failed to load products. Please try again.");
                    }
                });
            }

            // Initial load
            loadProducts();

            // Search functionality
            $('#searchButton').click(function () {
                const search = $('#searchInput').val();
                loadProducts(1, search);
            });
        });
    </script>
</body>
</html>
